{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": ".",          // so index.ts â†’ dist/index.js
    "strict": true,
    "composite": true,
    "allowImportingTsExtensions": false,
    "noEmit": false
  },
  "include": [
    "index.ts",
    "core/**/*",
    "dom/**/*",
    "components/**/*",
    "storage/**/*",
    "@types/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "../39.starter/**"
  ]
}
